<view class="container" wx:if="{{visible}}">
    <view class="confirm">
        <textarea placeholder="{{placeholder}}"
        value="{{value}}" bindinput="watchValue"></textarea>
        <view class="actions">
            <view class="sure" hover-class="active"
            bindtap="confirm">确定</view>
            <view hover-class="active" bindtap="cancel">取消</view>
        </view>
    </view>
</view>