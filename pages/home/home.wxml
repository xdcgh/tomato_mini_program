<view class="home-container">
    <scroll-view class="todoList" scroll-y="true">
        <view class="item" wx:for="{{list}}" wx:key="id"
              bindtap="destroyTodo" data-index="{{index}}">
            <view class="select {{item.finished && 'active'}}"></view>
            <text>{{item.text}}</text>
        </view>
    </scroll-view>

    <g-button text="创建任务" size="mini" type="change" bindtap="showConfirm"></g-button>
    <view class="tomato-wrapper">
        <view class="tomato">
            <g-clock text="点击开始番茄闹钟"></g-clock>
        </view>
    </view>
    <g-confirm visible="{{visibleConfirm}}" placeholder="你好呀"
               bindconfirm="confirmCreate" bindcancel="hideConfirm"></g-confirm>
</view>