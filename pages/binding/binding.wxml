<view class="binding">
    <view class="title">绑定PC账号</view>
    <view class="inputWrapper">
        <input placeholder="账号"
               bindinput="watchAccount" value="{{account}}"/>
        <input placeholder="密码"
               bindinput="watchPassword" value="{{password_digest}}"/>
    </view>
    <g-button text="绑定" type="change" size="mini"
              bindtap="submit"/>
    <view class="tips">绑定PC账号，立即同步数据</view>
    <image class="bg" src="../../images/tomato-bg.png"></image>
</view>